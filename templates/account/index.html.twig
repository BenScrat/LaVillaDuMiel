{% extends 'base.html.twig' %}

{% block title %}Mon compte - La villa du miel{% endblock %}

{% block content %}
    <h1>Mon compte</h1>

    {% if is_granted('ROLE_ADMIN') %}
    <small><a href="{{ path('admin') }}">Vous êtes un administrateur, accéder au backoffice ?</a></small><br>
    {% endif %}
    Bienvenue {{ app.user.lastname }} dans votre compte.
    <hr>
    <div class="row">
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{asset('assets/img/pin-code.png')}}" alt="Modifier mon mot de passe"><br>
                <a href="{{ path('app_account_password') }}">Modifier mon mot de passe</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{asset('assets/img/address-book.png')}}" alt="Gérer mes adresses"><br>
                <a href="{{ path('app_account_address') }}">Gérer mes adresses</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{asset('assets/img/delivery-status.png')}}" alt="Mes commandes"><br>
                <a href="{{ path('app_account_order') }}">Mes commandes</a>
            </div>
        </div>
    </div>
{% endblock %}
